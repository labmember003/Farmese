<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory app:title="@string/messages_header"
        app:iconSpaceReserved="false">

        <ListPreference
            app:entries="@array/language_entries"
            app:entryValues="@array/language_values"
            app:key="language"
            app:title="Preferred Language"
            app:useSimpleSummaryProvider="true"
            android:defaultValue="English"
            app:iconSpaceReserved="false"/>

        <EditTextPreference
            app:key="name"
            app:title="@string/name_title"
            app:useSimpleSummaryProvider="true"
            app:iconSpaceReserved="false"/>

        <ListPreference
            app:entries="@array/crop_entries"
            app:entryValues="@array/crop_values"
            app:key="reply"
            app:title="@string/crop_title"
            app:useSimpleSummaryProvider="true"
            app:iconSpaceReserved="false"/>

        <ListPreference
            app:entries="@array/yes_no_entries"
            app:entryValues="@array/yes_no_values"
            app:key="Shelter"
            app:title="Do You Have A Shelter System For Your Crops ?"
            app:useSimpleSummaryProvider="true"
            app:iconSpaceReserved="false"/>

        <ListPreference
            app:entries="@array/yes_no_entries"
            app:entryValues="@array/yes_no_values"
            app:key="Pest"
            app:title="Do You Have A Pest Control System For Your Crops ?"
            app:useSimpleSummaryProvider="true"
            app:iconSpaceReserved="false"/>
        <ListPreference
            app:entries="@array/yes_no_entries"
            app:entryValues="@array/yes_no_values"
            app:key="Drainage"
            app:title="Do You Have A Drainage System (Avoiding Water Logging) ?"
            app:useSimpleSummaryProvider="true"
            app:iconSpaceReserved="false"/>
        <Preference
            app:key="sloganBaji"
            app:title="#जय जवान जय किसान भारत के किसान भारत की शान!!!"

            app:useSimpleSummaryProvider="true"
            app:iconSpaceReserved="false"/>

    </PreferenceCategory>

</PreferenceScreen>